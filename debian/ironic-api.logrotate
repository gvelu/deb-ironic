/var/log/ironic/api.log {
    daily
    missingok
    compress
    delaycompress
    notifempty
    postrotate
        if dpkg-vendor --derives-from ubuntu ; then
            service ironic-api restart >/dev/null 2>&1 || true
        else
            invoke-rc.d ironic-api restart >/dev/null 2>&1 || true
        fi
    endscript
}
